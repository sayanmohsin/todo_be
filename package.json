{
  "name": "todo_be",
  "version": "1.0.0",
  "description": "",
  "main": "app.ts",
  "scripts": {
    "build": "tsc",
    "dev": "NODE_ENV=development dotenv -e .env -- nodemon",
    "prod": "dotenv -e .env -- pm2-runtime process.yml",
    "setup:pgdb": "dotenv -e .env -- node ./database/pgSetup",
    "setup:mongodb": "dotenv -e .env -- node ./database/mongoSetup",
    "lint": "eslint ./src/",
    "lint:fix": "eslint ./src/ --fix",
    "test": "NODE_ENV=test dotenv -e .env -- mocha -r ts-node/register ./src/tests/**/*.spec.ts",
    "test:pg": "NODE_ENV=test CURRENT_DATASOURCE=pg dotenv -e .env -- mocha -r ts-node/register ./src/tests/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sayanmohsin/todo_be.git"
  },
  "author": "SayanMohsin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sayanmohsin/todo_be/issues"
  },
  "homepage": "https://github.com/sayanmohsin/todo_be#readme",
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-pino-logger": "^6.0.0",
    "helmet": "^4.6.0",
    "mongodb": "^3.6.9",
    "pg": "^8.6.0",
    "pino": "^6.11.3",
    "pino-http": "^5.5.0",
    "pino-pretty": "^5.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.19",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/expect": "^24.3.0",
    "@types/express": "^4.17.12",
    "@types/express-pino-logger": "^4.0.2",
    "@types/http-errors": "^1.8.0",
    "@types/mocha": "^8.2.2",
    "@types/mongodb": "^3.6.18",
    "@types/node": "^15.12.4",
    "@types/pg": "^8.6.0",
    "@types/request": "^2.48.5",
    "@types/sinon": "^10.0.2",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.29.0",
